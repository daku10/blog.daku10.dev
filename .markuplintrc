{
  "extends": [
    "markuplint:recommended-react"
  ],
  "parser": {
    ".[jt]sx$": "@markuplint/jsx-parser"
  },
  "specs": {
    ".[jt]sx$": "@markuplint/react-spec"
  },
  "rules": {
    "heading-levels": false
  },
  "nodeRules": [
    {
      "selector": "img",
      "rules": {
        "required-attr": [
          "alt"
        ]
      }
    },
    {
      "selector": "[data-markuplint-disable]",
      "rules": {
        "no-hard-code-id": false
      }
    }
  ]
}
